<Page
    x:Class="Connect4.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Connect4"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel x:ConnectionId='1' x:Name="ChooseColour" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <TextBlock Text="Choose a colour." FontSize="30" HorizontalAlignment="Center"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Ellipse x:ConnectionId='6' x:Name="RedChp" Fill="Red" Width="100" Height="100" Margin="10" VerticalAlignment="Center"/>
            <Ellipse x:ConnectionId='7' x:Name="YelChp" Fill="Yellow" Width="100" Height="100" Margin="10" VerticalAlignment="Center"/>
        </StackPanel>

        <StackPanel x:ConnectionId='2' Name="Radiobtn" Orientation="Horizontal" HorizontalAlignment="Center">

            <RadioButton x:ConnectionId='4' Name="RadioButton1"  Content="Red" Tag="0" Margin="4"                              />
            <RadioButton x:ConnectionId='5' Name="RadioButton2" Content="Yellow" Tag="1" Margin="4"                              />

        </StackPanel>

        <Grid x:ConnectionId='3' Name="selectedColour" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="110"/>
            </Grid.ColumnDefinitions>
        </Grid>

    </StackPanel>
</Page>
 

